<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/textView"
    android:layout_toRightOf="@+id/btnMap"
    android:layout_toEndOf="@+id/btnMap">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsername"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:layout_marginTop="0dp"
        android:background="#444444"
        android:gravity="center_horizontal"
        android:paddingTop="30dp" />

    <TextView android:text="Setup your Empire" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#00ffff"
        android:textSize="26dp"
        android:layout_marginTop="0dp"
        android:background="#444444"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:paddingBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Your Territory"
        android:id="@+id/textView20"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This name will be displayed in all cells you control"
        android:id="@+id/textView7"
        android:textSize="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_gravity="center_horizontal"
        android:background="#444444"
        android:hint="Name your territory"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginTop="0dp"
        android:textColor="#cccccc"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Color"
        android:id="@+id/textView8"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="5dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/rgGroup">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Red"
            android:id="@+id/radioButton"
            android:checked="true"
            android:textColor="#ff0000"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:textColor="#0000ff"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:textColor="#ffffff00"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Green"
            android:id="@+id/radioButton4"
            android:checked="false"
            android:textColor="#00ff00"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Early Release Warning"
        android:id="@+id/textView10"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All gameplay data will most likely be reset in the future. This is just a early testing version."
        android:id="@+id/textView11"
        android:textSize="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:text="Okay"
        android:id="@+id/btnBegin"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#444444"
        android:textSize="22dp"
        android:textColor="#cccccc"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

</LinearLayout>

